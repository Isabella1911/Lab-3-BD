<h1>Lista de Participantes</h1>
<a href="/participantes/nuevo">Crear nuevo</a>
<table border="1">
  <tr>
    <th>Nombre</th><th>Apellido</th><th>Genero</th><th>Institución</th><th>Acciones</th>
  </tr>
  <% participantes.forEach(p => { %>
    <tr>
      <td><%= p.nombre %></td>
      <td><%= p.apellido %></td>
      <td><%= p.genero %></td>
      <td><%= p.institucion.nombre %></td>
      <td>
        <a href="/participantes/editar/<%= p.id_participante %>">Editar</a>
        <form action="/participantes/eliminar/<%= p.id_participante %>" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
<h1>Lista de Eventos</h1>
<a href="/eventos/nuevo">Crear nuevo</a>
<table border="1">
  <tr><th>Nombre</th><th>Fecha</th><th>Modalidad</th><th>Categoría</th><th>Acciones</th></tr>
  <% eventos.forEach(e => { %>
    <tr>
      <td><%= e.nombre %></td>
      <td><%= e.fecha.toDateString() %></td>
      <td><%= e.modalidad %></td>
      <td><%= e.categoria.nombre %></td>
      <td>
        <a href="/eventos/editar/<%= e.id_evento %>">Editar</a>
        <form action="/eventos/eliminar/<%= e.id_evento %>" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
<h1>Inscripciones</h1>
<a href="/inscripciones/nuevo">Nueva inscripción</a>
<table border="1">
  <tr>
    <th>Participante</th>
    <th>Evento</th>
    <th>Estado</th>
    <th>Acciones</th>
  </tr>
  <% inscripciones.forEach(i => { %>
    <tr>
      <td><%= i.participante.nombre %> <%= i.participante.apellido %></td>
      <td><%= i.evento.nombre %></td>
      <td><%= i.estado %></td>
      <td>
        <form action="/inscripciones/eliminar/<%= i.id_inscripcion %>" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
<h1>Resultados Finales</h1>
<a href="/resultados/nuevo">Nuevo resultado</a>
<table border="1">
  <tr>
    <th>Evento</th>
    <th>Participante</th>
    <th>Puntaje Total</th>
    <th>Posición</th>
    <th>Medalla</th>
    <th>Acciones</th>
  </tr>
  <% resultados.forEach(r => { %>
    <tr>
      <td><%= r.evento.nombre %></td>
      <td><%= r.participante.nombre %> <%= r.participante.apellido %></td>
      <td><%= r.puntaje_total %></td>
      <td><%= r.posicion %></td>
      <td><%= r.medalla || '-' %></td>
      <td>
        <form action="/resultados/eliminar/<%= r.id_resultado %>" method="POST">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
<h1>Vista: Resultados Completos</h1>
<table border="1">
  <tr>
    <th>Evento</th>
    <th>Participante</th>
    <th>Puntaje</th>
    <th>Posición</th>
    <th>Medalla</th>
  </tr>
  <% resultados.forEach(r => { %>
    <tr>
      <td><%= r.evento %></td>
      <td><%= r.participante %></td>
      <td><%= r.puntaje_total %></td>
      <td><%= r.posicion %></td>
      <td><%= r.medalla || '-' %></td>
    </tr>
  <% }) %>
</table>
